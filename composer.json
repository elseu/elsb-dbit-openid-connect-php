{
    "name": "dbit/openid-connect-php",
    "description": "Bare-bones OpenID Connect client",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "H. Paúl Cervera García",
            "email": "hp.cerveragarcia@dbit.lu"
        }
    ],
    "require": {
        "php": ">=7.4",
        "phpseclib/phpseclib" : "~2.0 || ^3.0",
        "ext-json": "*",
        "ext-curl": "*",
        "paragonie/random_compat": ">=2",
        "symfony/http-foundation": "~5.3|~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "roave/security-advisories": "dev-master"
    },
    "archive" : {
        "exclude" : [
            ".*"
        ]
    },
    "autoload" : {
         "classmap": [ "src/"]
    },
    "config" : {
        "platform": {
            "php": "7.4"
        }
    }
}
